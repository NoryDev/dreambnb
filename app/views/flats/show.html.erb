<div class="show-image-container">
<div class="show-cover-img"><%= image_tag @flat.flat_pics.first.picture.url(:large) %>
</div>
</div>
<div class = "container padded">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class = "row">
        <p><strong><%= @flat.name %></strong></p>
      </div>

      <div class = "row">
      </div>
      <hr>
      <div class = "row">
        <div class = "col-md-3">
          Space
        </div>
        <div class = "col-md-9">
          <div class = row>
            <div class = "col-md-6">
              <div>
                <small class = "text-muted">City:</small>
                <strong><%= @flat.city %></strong>
              </div>
              <div>
                <small class = "text-muted">Property Type:</small>
                <strong>Appartment</strong>
              </div>
              <div>
                <small class = "text-muted">Accomodates:</small>
                <strong><%= @flat.accomodates %>  </strong>
              </div>
              <div>
                <small class = "text-muted">Price:</small>
                <strong><%= @flat.price %> â‚¬</strong>
              </div>
            </div>
            <div class = "col-md-6">
              <div>
                <small class = "text-muted">Bathrooms:</small>
                <strong><%= 2 %></strong>
              </div>
              <div>
                <small class = "text-muted">Check In:</small>
                <strong><%= 11.00 %></strong>
              </div>
              <div>
                <small class = "text-muted">Check Out:</small>
                <strong><%= 13.00 %></strong>
              </div>
              <div>
                <small class = "text-muted">Host:</small>
                <strong><%= @flat.user.email %></strong>
              </div>
              <div></div>
            </div>
          </div>
        </div>
      </div>
      <hr>
      <div class = "row">
        <div class = "col-md-3">
          Amenities
        </div>
        <div class = "col-md-9">
          <div class = row>
            <div class = "col-md-6">
              <div>
                <small class = "text-muted">Air-Conditing:</small>
                <strong><%= @flat.has_AC ? "Yes" : "No" %></strong>
              </div>
              <div>
                <small class = "text-muted">Jacuzzi:</small>
                <strong><%= @flat.has_jacuzzi ? "Yes" : "No" %></strong>
              </div>
              <div>
                <small class = "text-muted">Kitchen:</small>
                <strong>Yes</strong>
              </div>
              <div>
                <small class = "text-muted">Wifi:</small>
                <strong>Yes</strong>
              </div>
            </div>
            <div class = "col-md-6">
              <div>
                <small class = "text-muted">Heating:</small>
                <strong>Yes</strong>
              </div>
              <div>
                <small class = "text-muted">Breakfas:</small>
                <strong>No</strong>
              </div>
              <div>
                <small class = "text-muted">Free Parking</small>
                <strong>Yes</strong>
              </div>
              <div>
                <small class = "text-muted">Sheets:</small>
                <strong>Yes</strong>
              </div>
              <div></div>
            </div>
          </div>
        </div>
      </div>

<hr>
      <div class = "row">
        <div class = "col-md-3">
          Description
        </div>
      <div class = "col-md-9">
          <div class = row>
            <div class = "col-md-6">
              <div>
                <small class = "text-muted"><%= @flat.description %></small>
              </div>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <div class = "row">
        <% @flat.flat_pics.each do |flat_pic| %>
        <%= image_tag flat_pic.picture.url(:medium) %>
        <%end%>
      </div>

      <hr>
      <%= link_to 'Book Now', new_booking_path( :user_id => @flat.user_id, :flat_id => @flat.id ) %> |
      <%= link_to 'Back', flats_path, {class: "btn btn-primary"} %>
    </div>
  </div>
</div>