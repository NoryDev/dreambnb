<p id="notice"><%= notice %></p>

<h1>Listing Flats</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>City</th>
      <th>Accomodates</th>
      <th>Price</th>
      <th>Has ac</th>
      <th>Has jacuzzi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flats.each do |flat| %>
      <tr>
        <td><%= flat.user %></td>
        <td><%= flat.city %></td>
        <td><%= flat.accomodates %></td>
        <td><%= flat.price %></td>
        <td><%= flat.has_AC %></td>
        <td><%= flat.has_jacuzzi %></td>
        <td><%= link_to 'Show', flat %></td>
        <td><%= link_to 'Edit', edit_flat_path(flat) %></td>
        <td><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

