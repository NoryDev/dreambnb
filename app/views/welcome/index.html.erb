<div class="text-center bg-image">
  <div class="container">
  <div class="row center">
    <div class="col-xs-12">
      <div class="intro-text">
        <h2>Welcome! <span>Explore</span> our <span>offers.</span></h2>
        <p>We offer a broad range of locations all around the globe.</p>
      </div>
      <div>
        <%= form_tag '/search', method: :get, :class => "form-horizontal", :role => 'form' do %>
          <div class="form-group">
            <div class="col-xs-3"></div>
              <div class="col-xs-6">
                <%= text_field_tag :address, nil, id: "user_input_autocomplete_address", class: "form-control", placeholder: 'Where do you want to go?' %>
              </div>
              <div class="col-xs-3"></div>
            </div>
            <div class="form-group">
              <div class="col-xs-3"></div>
              <div class="col-xs-6">
                <%= submit_tag 'Search', class: 'btn btn-success' %>
              </div>
              <div class="col-xs-3"></div>
            </div>
        <% end %>
        <div class= "padded"></div>
        <div class="form-group">
              <div class="col-xs-3"></div>
              <div class="col-xs-6">
                <%= link_to 'List of All Flats', flats_path, {class: "btn btn-primary"} %>
              </div>
              <div class="col-xs-3"></div>
            </div>
      </div>
    </div>
  </div>
</div>
</div>