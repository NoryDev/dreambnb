<div class = "container padded">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">

      <% if notice %>
        <p id="notice" class="alert alert-success alert-dismissible">
          <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </p>
      <% end %>

      <h1><%= @flat.city %></h1>
      <table class = "table">
        <thead>
          <tr>
            <th>Flat</th>
            <th>Destroy</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @flat_pics.each do |flat_pic| %>
          <tr>
            <td><%= image_tag flat_pic.picture.url(:thumb) %></td>
            <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, flat_flat_pic_path(@flat, flat_pic), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= render 'form' %>
    </div>
  </div>
</div>
