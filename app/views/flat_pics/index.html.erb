<div class = "container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <% if notice %>
        <p id="notice" class="alert alert-success alert-dismissible">
          <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </p>
      <% end %>

      <h1><%= @flat.city %></h1>

      <table class = "table">
        <thead>
          <tr>
            <th>Description</th>
            <th>Flat</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @flat_pics.each do |flat_pic| %>
            <tr>
              <td><%= flat_pic.description %></td>
              <td><%= image_tag flat_pic.picture.url(:medium) %></td>
              <td><%= link_to 'Edit', edit_flat_flat_pic_path(@flat, flat_pic) %></td>
              <td><%= link_to 'Destroy', flat_flat_pic_path(@flat, flat_pic), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Upload image', new_flat_flat_pic_path(@flat) %>

    </div>
  </div>
</div>
