<p id="notice"><%= notice %></p>
<div class="container">
<div class = "row">
  <div class="col-xs-10 col-xs-offset-1 text-center">
    <div class = "row">
    <h1 class= "pullUp">Search Results</h1>
    </div>

  <div class = "row">
    <% @results.each do |flat| %>
    <div class="col-xs-12 col-sm-4 text-center">
    <h5><%= flat.city %></h5>
    <hr>
    <p class="text-muted small">Beds : <%= flat.accomodates %> · <%= flat.price %> €/night</p>
    <p class="text-muted small"><%= link_to 'View details', flat %></p>
    </div>
    <% end %>

  </div>
</div>
</div>
</div>
<br>